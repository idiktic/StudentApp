<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context="ivan.studentapp.deadlinesscreen.EventViewFragment">

    <TextView
        android:id="@+id/tv_details_event_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Subject"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_details_event_date"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_details_event_subject"
        android:layout_marginTop="18dp"
        android:text="Date"
        android:textAlignment="viewStart"
        android:textSize="20dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_details_event_type"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_details_event_date"
        android:layout_alignBottom="@+id/tv_details_event_date"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:text="Type"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="italic" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/tv_details_event_date"
        android:layout_alignStart="@+id/tv_details_event_type">
    <TextView
        android:id="@+id/tv_details_event_note"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="Note"
        android:textSize="20dp"
        android:textStyle="italic"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>
    </ScrollView>

</RelativeLayout>
