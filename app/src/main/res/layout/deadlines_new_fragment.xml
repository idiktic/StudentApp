<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_event_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    tools:context="ivan.studentapp.deadlinesscreen.DeadlinesNewFragment">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="320dp"
        android:background="@color/normal_priority"
        android:id="@+id/relativeLayout2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/txt_deadline_type"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spinner_type"
            android:layout_toStartOf="@+id/spinner_type"
            android:background="@drawable/underline"
            android:text=""
            android:textAlignment="center"/>

        <Spinner
            android:id="@+id/spinner_type"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignStart="@+id/txt_deadline_time" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:text="Subject: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="24dp"
            android:text="Time: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="22dp"
            android:text="Type: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="16dp"
            android:text="Note"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_deadline_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

<!--        <Button
            android:id="@+id/btn_deadline_save_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/edit_deadline_note"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="41dp"
            android:text="Save" />-->

        <TextView
            android:id="@+id/txt_deadline_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:background="@drawable/underline"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/txt_deadline_time"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/underline"
            android:textAlignment="center"
            android:visibility="invisible"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toEndOf="@+id/txt_deadline_date" />
<!--
        <Button
            android:id="@+id/btn_deadline_cancel_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_deadline_save_event"
            android:layout_alignBottom="@+id/btn_deadline_save_event"
            android:layout_toEndOf="@+id/textView4"
            android:text="Cancel" />-->

    </RelativeLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/underline"
        android:text=""
        android:textAlignment="center"/>

    <Spinner
        android:id="@+id/spinner_subject"
        android:layout_width="40dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/textView7" />
</RelativeLayout>