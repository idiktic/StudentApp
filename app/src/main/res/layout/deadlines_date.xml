<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#00000000">

        <DatePicker
            android:id="@+id/deadline_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="380dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:translationY="-95dp"
            android:background="#00000000"/>

        <Button
            android:id="@+id/deadline_date_btn_ok"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/deadline_date_picker"
            android:layout_alignEnd="@+id/deadline_date_picker"
            android:layout_marginBottom="21dp"
            android:layout_marginEnd="18dp"
            android:background="#00000000"
            android:text="OK" />

        <Button
            android:id="@+id/deadline_date_btn_cancel"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/deadline_date_btn_ok"
            android:layout_alignBottom="@+id/deadline_date_btn_ok"
            android:layout_toStartOf="@+id/deadline_date_btn_ok"
            android:background="#00000000"
            android:text="Cancel" />
    </RelativeLayout>
</RelativeLayout>