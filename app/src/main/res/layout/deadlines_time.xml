<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TimePicker
        android:id="@+id/deadline_time_picker"
        android:layout_width="250dp"
        android:layout_height="380dp"
        android:layout_centerHorizontal="true"
        android:headerBackground="@color/colorPrimary" />

    <Button
        android:id="@+id/deadline_time_btn_ok"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="OK"
        android:layout_alignBottom="@+id/deadline_time_picker"
        android:layout_alignEnd="@+id/deadline_time_picker" />

    <Button
        android:id="@+id/deadline_time_btn_cancel"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="Cancel"
        android:layout_alignBaseline="@+id/deadline_time_btn_ok"
        android:layout_alignBottom="@+id/deadline_time_btn_ok"
        android:layout_toStartOf="@+id/deadline_time_btn_ok" />
</RelativeLayout>